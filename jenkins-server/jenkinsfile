pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/Asifmiyya/Asf-git.git'
        BRANCH = 'jenkins'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: "${jenkins}", url: "${https://github.com/Asifmiyya/Asf-git.git}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'echo Installing dependencies...'
                sh 'npm install'  // Change this for your app (e.g., `mvn install` for Java)
            }
        }

        stage('Run Tests') {
            steps {
                sh 'echo Running tests...'
                sh 'npm test'  // Modify as per your project
            }
        }

        stage('Build') {
            steps {
                sh 'echo Building the project...'
                sh 'npm run build'  // Modify as per your project
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo Deploying application...'
                sh 'echo Deployment successful!'  // Replace with actual deployment script
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs!'
        }
    }
}
