pipeline {
    agent any  

    environment {
        PYTHON_VERSION = '3.8'  // You can change this to your desired version
        VENV_DIR = 'venv'        // Directory for the virtual environment
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'mail', url: 'https://github.com/Asifmiyya/Asf-git.git'
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    sh 'python${PYTHON_VERSION} -m venv $VENV_DIR'  
                    sh '. $VENV_DIR/bin/activate && pip install -r requirements.txt'  
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh '. $VENV_DIR/bin/activate && pytest --maxfail=1 --disable-warnings -q'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main' 
            }
            steps {
                script {
                    echo 'Deploying the application...'
                }
            }
        }
    }

    post {
        always {
            sh 'deactivate'  // Deactivating the  virtual environment if needed
        }

        success {
            echo 'Build and tests passed successfully!'
        }

        failure {
            echo 'There was a failure in the build or tests.'
        }
    }
}
